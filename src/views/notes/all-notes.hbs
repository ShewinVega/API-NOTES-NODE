<div class="row">
  {{#each data}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{title}} <a href="/api/notes/edit/{{_id}}"><i class="fa fa-pencil" title="Edit"></i></a>
        </h4>
        <p>{{description}}</p>
        <form action="/api/notes/delete/{{_id}}?_method=DELETE" method="post">
            
          <button type="submit" class="btn btn-danger btn-block btn-sm" >Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}} 
</div>